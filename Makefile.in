CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
sysconfdir	= @sysconfdir@
libdir		= @libdir@
sbindir		= @sbindir@
localstatedir	= @localstatedir@
DOCDIR		= @DOCDIR@
MODDIR		= @MODDIR@
SHAREDIR	= @SHAREDIR@
BIN		= atheme@EXEEXT@

SHELL=/bin/sh
SUBDIRS=libatheme crypto backend modules protocol src
CLEANDIRS = ${SUBDIRS}

all: depend build

build:
	-@if [ ! -f include/sysconf.h ] ; then \
		echo "Hmm...doesn't look like you've run configure..."; \
		echo "Doing so now."; \
		sh configure; \
	fi
	@for i in $(SUBDIRS); do \
		echo "build ==> $$i"; \
		cd $$i; \
		${MAKE} build || exit; cd ..; \
	done

clean:
	${RM} -f *~ core atheme.core
	@for i in $(CLEANDIRS); do \
		echo "clean ==> $$i"; \
		cd $$i; \
		${MAKE} clean; cd ..; \
	done
	-@if [ -f include/sysconf.h ] ; then \
		echo "To really restart installation, make distclean"; \
	fi

distclean:
	${RM} -f Makefile *~ *.orig core atheme.core
	${RM} -f config.status config.cache config.log
	cd include; ${RM} -f sysconf.h *~ *.orig; cd ..
	@for i in $(CLEANDIRS); do \
		echo "distclean ==> $$i"; \
		cd $$i; \
		${MAKE} distclean; cd ..; \
	done

depend:
	@for i in $(SUBDIRS); do \
		echo "depend ==> $$i"; \
		cd $$i; \
		touch .depend; \
		${MAKE} depend; cd ..; \
	done
	@echo "depend ==> contrib"; cd contrib; touch .depend && ${MAKE} depend || echo '(error ignored)'; cd ..

install: build
	@for i in $(SUBDIRS); do \
		echo "install ==> $$i"; \
		cd $$i; \
		${MAKE} install; \
		cd ..; \
	done
