CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
PREFIX		= @prefix@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../include
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../include @PGINC@

VERSION		= 0.1

LIBS		= @LIBS@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = 		\
	fc_dice.c	\
	ircd_catserv.c

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: protocols

build: all

install: build
	${INSTALL} -d ${PREFIX}/contrib
	${INSTALL} -m 755 *.so ${PREFIX}/contrib

protocols: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: clean distclean

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last
