CC		= gcc
RM		= del
MV		= ren
CP		= CP
INSTALL		= 
PREFIX		= prefix
BIN		= athemeEXEEXT
MKDEP		= MKDEP -DPREFIX=\"prefix\" -I../../include  
PICFLAGS	= -DPIC -shared -enable-auto-import
CFLAGS		= -DI_AM_A_MODULE -static -mno-cygwin -Wall -I../win32 -I../../win32 -I../../include -I../../libatheme -g

VERSION		= 0.1

LIBS		= -lwsock32 
LDFLAGS		= ../win32/regex.c
CPPFLAGS	= 

default: all

BASE_SRCS = 		\
	main.c	\
	helper.c	\
	override.c	
	
	
SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.dll}

all: modules

build: all

install: build
	${INSTALL} -d ${PREFIX}/modules/helpserv
	${INSTALL} -m 755 *.dll ${PREFIX}/modules/helpserv
	
modules: $(OBJS)

.SUFFIXES: .dll

.c.dll:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< ../../src/libathemecore.a -o $@

.PHONY: clean

clean:
	${RM} -f *.dll
