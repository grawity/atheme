CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
sysconfdir	= @sysconfdir@
libdir		= @libdir@
sbindir		= @sbindir@
localstatedir	= @localstatedir@
DOCDIR		= @DOCDIR@
MODDIR		= @MODDIR@
SHAREDIR	= @SHAREDIR@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../../include @PGINC@
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../../include -I../../libatheme @PGINC@

LIBS		= @LIBS@ @PQLIB@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = 		\
	main.c		\
	akill.c		\
	clearchan.c	\
	clones.c	\
	compare.c	\
	help.c		\
	ignore.c	\
	inject.c	\
	jupe.c		\
	mode.c		\
	modinspect.c	\
	modlist.c	\
	modload.c	\
	modrestart.c	\
	modunload.c	\
	noop.c		\
	raw.c		\
	rakill.c	\
	rmatch.c	\
	rehash.c	\
	restart.c	\
	rnc.c		\
	rwatch.c	\
	shutdown.c	\
	soper.c		\
	specs.c		\
	uptime.c	\
	update.c
	
SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: modules

build: all

install: build
	${INSTALL} -d $(DESTDIR)${MODDIR}/modules/operserv
	${INSTALL} -m 755 *.so $(DESTDIR)${MODDIR}/modules/operserv

modules: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: depend clean distclean
# This sed command sucks but I don't know a better way -- jilles
depend:
	${MKDEP} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} ${BASE_SRCS} | sed -e 's/\.o:/.so:/' > .depend

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last

include .depend
