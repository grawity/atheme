CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
PREFIX		= @prefix@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../include
CFLAGS		= @CFLAGS@ -I../include @PGINC@

VERSION		= 0.1

LIBS		= @LIBS@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = dbtool.c

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.o}

all: dbtool

build: all

install: build

dbtool: $(OBJS)
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ ${OBJS} ${LIBS}

.c.o:
	${CC} ${CPPFLAGS} ${CFLAGS} -c $< -o $@

.PHONY: clean distclean

clean:
	${RM} -f *.o *.exe *~ version.c dbtool.core core dbtool

distclean: clean
	${RM} -f Makefile version.c.last
