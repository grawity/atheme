CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
sysconfdir	= @sysconfdir@
libdir		= @libdir@
sbindir		= @sbindir@
DOCDIR		= @DOCDIR@
MODDIR		= @MODDIR@
SHAREDIR	= @SHAREDIR@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../include
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../include -I../libatheme @PGINC@

LIBS		= @LIBS@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = 		\
	asuka.c         \
	bahamut.c       \
	bircd.c         \
	charybdis.c	\
	dreamforge.c    \
	hybrid.c	\
	hyperion.c      \
	inspircd10.c      \
	inspircd11.c	\
	ircnet.c        \
	nefarious.c	\
	plexus.c        \
	ptlink.c	\
	ratbox.c        \
	shadowircd.c    \
	solidircd.c	\
	sorcery.c       \
	ultimate3.c	\
	undernet.c      \
	unreal.c

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: protocols

build: all

install: build
	${INSTALL} -d $(DESTDIR)${MODDIR}/protocol
	${INSTALL} -m 755 *.so $(DESTDIR)${MODDIR}/protocol

protocols: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: depend clean distclean
# This sed command sucks but I don't know a better way -- jilles
depend:
	${MKDEP} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} ${BASE_SRCS} | sed -e 's/\.o:/.so:/' > .depend

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last

include .depend
